<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h1>User info</h1>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_id" href="/users/:id/edit"></a>
        </div>
        <h1 class="mt-3">New book</h1>
        <%= form_with model:@book, url:'/books', local:true do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label>
            <%= f.text_field :title, class:"form-control book_title" %>
            <label for="book_opinion">Opinion</label>
            <%= f.text_area :body, class:"form-control book_body" %><br>
          </div>
          <%= f.submit "Create Book", class:"btn btn-success" %>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h1>Book detail</h1>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= attachment_image_tag @user, :profile_image, :fill, 20, 20, format: 'jpeg', fallback: "no_image.jpg" %><br>
                <%= link_to current_user.name, user_path(@user.id) %>
              </td>
              <td><%= link_to @books.title, book_path(@books.id) %></td>
              <td><%= @books.body %></td>
              <td><%= link_to 'Edit', edit_book_path, class: "btn btn-sm btn-success" %></td>
              <td><%= link_to 'Destroy', book_path(@books.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-success" %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>