<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>User info</h1>
        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
            <label for="inputName">Name</label><br>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
          </div>
          <div class="form-group">
            <label for="inputImage">Image</label><br>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
          </div>
          <div class="form-group">
            <label for="inputIntroduction">Introduction</label><br>
            <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介文" %>
          </div>
          <div class="form-group"><br>
            <%= f.submit "Update User", class:"btn btn-secondary"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>